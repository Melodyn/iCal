extends index

mixin calendarIframe(calendarLink)
  iframe#calendarIframe(
    src=calendarLink
    style='border: 0'
    width='100%'
    height='100%'
    frameborder='0'
    scrolling='yes'
  )


block content
  - const calendarLink = values.calendar.extra.calendarLink;
  if (user.isAdmin)
    include adminForm
    +calendarIframe(calendarLink)
  else
    +calendarIframe(calendarLink)
